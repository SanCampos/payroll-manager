<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import main.java.customNodes.ChangeDetectingInputs.FormTextField?>

<?import main.java.customNodes.ChangeDetectingInputs.FormImageView?>
<?import main.java.customNodes.ChangeDetectingInputs.FormDatePicker?>
<?import main.java.customNodes.ChangeDetectingInputs.FormTextArea?>
<GridPane alignment="TOP_CENTER" hgap="6" prefHeight="400.0" prefWidth="600.0" vgap="8" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controllers.ChildFormController">


    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <!-- Input for imimageatar -->
    <FormImageView fx:id="childImageView" fitHeight="97.0" fitWidth="88.0" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="4" />

    <Label fx:id="imageName" alignment="CENTER" prefWidth="88.0" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="2" GridPane.valignment="TOP" />

    <Button onAction="#changeChildImg" prefHeight="57.0" prefWidth="93.0" text="Change image" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.rowSpan="2" />

    <!-- Input for first name of child -->
    <Label text="First name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label fx:id="firstNameWarning" styleClass="notify-empty" text="This form is empty!" GridPane.columnIndex="2" GridPane.rowIndex="0" />
    <FormTextField fx:id="firstNameInput" maxLength="30" promptText="Juan" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="1" />

    <!-- Input for last name of child -->
    <Label text="Last name" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
    <Label fx:id="lastNameWarning" styleClass="notify-empty" text="This form is empty!" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <FormTextField fx:id="lastNameInput" maxLength="30" promptText="dela Cruz" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="3" />

    <!-- Input for nickname of child -->
    <Label text="Nickname (optional)" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" />
    <FormTextField fx:id="nickNameInput" maxLength="15" promptText="John" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5" />

    <!-- Input for gender of child -->
    <Label text="Gender" GridPane.columnIndex="3" GridPane.rowIndex="4" />

    <fx:define>
        <ToggleGroup fx:id="genderToggleGroup" />
    </fx:define>
    <RadioButton fx:id="maleButton" text="Male" toggleGroup="$genderToggleGroup" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
    <RadioButton fx:id="femaleButton" text="Female" toggleGroup="$genderToggleGroup" GridPane.columnIndex="4" GridPane.rowIndex="5" />

        <!-- Input for birth date of child -->
    <Label text="Birthdate" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Label fx:id="birthDateWarning" styleClass="notify-empty" text="Date forms are empty" GridPane.columnIndex="2" GridPane.rowIndex="6" />
    <FormDatePicker fx:id="birthDateInput" prefHeight="25.0" prefWidth="231.0" promptText="Format - 06/12/2000" styleClass="date-input" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="7" />

        <!-- Input for place of birth of child -->
    <Label text="Place of birth" GridPane.columnIndex="3" GridPane.rowIndex="6" />
    <Label fx:id="birthPlaceWarning" styleClass="notify-empty" text="This form is empty!" GridPane.columnIndex="4" GridPane.rowIndex="6" />
    <FormTextField fx:id="birthPlaceInput" maxLength="150" promptText="Negros Occ. Baco..." GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="7" />

    <!-- Input admission_datesion date of child -->
    <Label text="Date of admission" GridPane.columnIndex="1" GridPane.rowIndex="8" />
    <Label fx:id="admissionDateWarning" styleClass="notify-empty" text="Date forms are empty" GridPane.columnIndex="2" GridPane.rowIndex="8" />
    <FormDatePicker fx:id="admissionDateInput" prefHeight="25.0" prefWidth="230.0" promptText="Format - 06/12/2000" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="9" />

    <!-- Input for referrer of child -->
    <Label text="Referred by: " GridPane.columnIndex="3" GridPane.rowIndex="8" />
    <Label fx:id="referrerWarning" styleClass="notify-empty" text="This form is empty" GridPane.columnIndex="4" GridPane.rowIndex="8" />
    <FormTextField fx:id="referrerInput" maxLength="100" promptText="DSWD" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="9" />

    <!--Input for Child Status -->
    <Label text="Status" GridPane.columnIndex="1" GridPane.rowIndex="10" />
    <ComboBox fx:id="childStatus" prefHeight="25.0" prefWidth="428.0" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="11">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Foundling" />
                <String fx:value="Abused" />
                <String fx:value="No Parents" />
                <String fx:value="Neglected" />
                <String fx:value="Surrendered" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Input for child description -->
    <Label prefWidth="66.0" text="Description" GridPane.columnIndex="0" GridPane.rowIndex="12" />
    <Label fx:id="childDescWarning" styleClass="notify-empty" text="This form is empty!" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="13" />
    <FormTextArea fx:id="childDescInput" prefHeight="391.0" prefWidth="432.0" wrapText="true" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="13" />

        <!-- Submit and cancel buttons -->
    <Button fx:id="submitBtn" prefHeight="25.0" prefWidth="75.0" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="14" />
    <Button fx:id="cancelBtn" onAction="#cancel" prefHeight="25.0" prefWidth="75.0" text="Cancel" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="14" />

    <!-- Warning text for incomplete form  -->
    <Label fx:id="warnEmptyLabel" styleClass="notify-empty" text="You have incomplete fields!" GridPane.columnIndex="2" GridPane.rowIndex="14" />

    <stylesheets>
        <URL value="@/css/childForm.css" />
    </stylesheets>
   <columnConstraints>
      <ColumnConstraints maxWidth="101.0" minWidth="70.0" prefWidth="94.0" />
      <ColumnConstraints maxWidth="116.0" minWidth="51.0" prefWidth="110.0" />
      <ColumnConstraints maxWidth="165.0" minWidth="109.0" prefWidth="115.0" />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>

</GridPane>
